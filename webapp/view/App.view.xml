<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    controller="sap.ui.calculator.controller.App"
>
    <App>
        <pages>
            <Page title="Calculator">
                <content>
                    <Panel height="100%" width="100%">
                        <VBox height="100%" width="100%" justifyContent="Center"
                            alignContent="Center">
                            <Panel
                                width="100%"
                                height="100%"
                            >
                                <FlexBox
                                    direction="Column"
                                    alignItems="Center"
                                    justifyContent="Center"
                                >
                                    <Input
                                        class="sapUiLargeMarginBottom"
                                        id="result"
                                        value="0"
                                        editable="false"
                                        type="Text"
                                        textAlign="Right"
                                        width="190px"
                                    ></Input>
                                    <grid:CSSGrid
                                        id="grid"
                                        gridTemplateColumns="1fr"
                                        gridTemplateRows="1fr 4fr"
                                        width="200px"
                                    >
                                        <grid:CSSGrid
                                            gridTemplateColumns="1fr 1fr 1fr 1fr"
                                            gridTemplateRows="1fr"
                                        >
                                            <Button id="plusBtn" press=".onPressPlusBtn"
                                                class="calculatorBtn"
                                                text="+" />
                                            <Button id="minusBtn" press=".onPressMinusBtn"
                                                class="calculatorBtn"
                                                text="-" />
                                            <Button id="multiplyBtn" press=".onPressMultiplyBtn"
                                                class="calculatorBtn"
                                                text="*" />
                                            <Button id="divideBtn" press=".onPressDivideBtn"
                                                class="calculatorBtn"
                                                text="/" />
                                        </grid:CSSGrid>

                                        <grid:CSSGrid
                                            gridTemplateColumns="3fr 1fr"
                                            gridTemplateRows="1fr"
                                        >
                                            <grid:CSSGrid
                                                gridTemplateColumns="1fr 1fr 1fr"
                                                gridTemplateRows="1fr 1fr 1fr"
                                            >
                                                <Button id="oneBtn" press=".onPressOneBtn"
                                                    class="calculatorBtn"
                                                    text="1" />
                                                <Button id="twoBtn" press=".onPressTwoBtn"
                                                    class="calculatorBtn"
                                                    text="2" />
                                                <Button id="threeBtn" press=".onPressThreeBtn"
                                                    class="calculatorBtn"
                                                    text="3" />
                                                <Button id="fourBtn" press=".onPressFourBtn"
                                                    class="calculatorBtn"
                                                    text="4" />
                                                <Button id="fiveBtn" press=".onPressFiveBtn"
                                                    class="calculatorBtn"
                                                    text="5" />
                                                <Button id="sixBtn" press=".onPressSixBtn"
                                                    class="calculatorBtn"
                                                    text="6" />
                                                <Button id="sevenBtn" press=".onPressSevenBtn"
                                                    class="calculatorBtn"
                                                    text="7" />
                                                <Button id="eightBtn" press=".onPressEightBtn"
                                                    class="calculatorBtn"
                                                    text="8" />
                                                <Button id="nineBtn" press=".onPressNineBtn"
                                                    class="calculatorBtn"
                                                    text="9" />
                                                <Button id="dotBtn" press=".onPressDotBtn"
                                                    class="calculatorBtn"
                                                    text="." />
                                                <Button id="zeroBtn" press=".onPressZeroBtn"
                                                    class="calculatorBtn"
                                                    text="0" />
                                                <Button id="cancelBtn" press=".onPressCancelBtn"
                                                    class="calculatorBtn"
                                                    text="C" />
                                            </grid:CSSGrid>
                                            <Button id="equalBtn" press=".onPressEqualBtn"
                                                class="calculatorBtn equalBtn" text="=" />
                                        </grid:CSSGrid>

                                    </grid:CSSGrid>
                                </FlexBox>
                            </Panel>
                        </VBox>
                    </Panel>


                </content>
            </Page>
        </pages>
    </App>
</mvc:View>